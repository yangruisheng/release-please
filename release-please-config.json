{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "monorepo-tags": true,
    "release-type": "go",
    "tag-separator": "/",
    "packages": {
        ".": {
            "exclude-paths": [
                "foo",
                "bar"
            ]
        },
        "foo": {
            "component": "foo"
        },
        "bar": {
            "component": "bar"
        }
    }
}
